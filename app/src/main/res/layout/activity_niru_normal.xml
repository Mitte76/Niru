<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_niru"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mats.niru.Niru"
    android:background="@android:color/black">
    <com.mats.niru.AlphaBackground
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/opacity"
        android:alpha="0">

        <TextView
            android:text="DoubleTap to skip"
            android:layout_width="match_parent"
            android:id="@+id/textView4"
            android:layout_gravity="bottom"
            android:elevation="3dp"
            android:layout_weight=".33"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/counterView"
            android:textSize="150sp"
            android:elevation="2dp"
            android:layout_weight=".33"
            android:gravity="center" />

        <TextView
            android:text="DoubleTap to skip"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textView5"
            android:layout_weight=".33"
            android:textSize="30sp"
            android:gravity="bottom|center_horizontal" />


    </com.mats.niru.AlphaBackground>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".25">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight=".25"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:splitMotionEvents="false"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textAlignment="gravity"
                android:textSize="30sp"
                android:gravity="bottom|center_horizontal" />


            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAlignment="gravity"
                android:textSize="30sp"
                android:gravity="bottom|center_horizontal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight=".25"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:splitMotionEvents="true"
            android:layout_gravity="center_horizontal">

            <com.mats.niru.MyImageButton
                android:layout_width="wrap_content"
                android:src="@drawable/greenoff"
                android:id="@+id/myImageButton6"
                android:background="@android:color/black"
                android:scaleType="centerInside"
                android:layout_gravity="bottom|center_horizontal"
                android:hapticFeedbackEnabled="true"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_margin="4dp" />

            <com.mats.niru.MyImageButton


                android:layout_width="wrap_content"
                android:src="@drawable/redoff"
                android:id="@+id/myImageButton1"
                android:background="@android:color/black"
                android:layout_gravity="bottom|center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_margin="4dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight=".25"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:splitMotionEvents="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:animateLayoutChanges="false">


            <com.mats.niru.MyImageButton

                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/yellowoff"
                android:id="@+id/myImageButton2"
                android:background="@android:color/black"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:hapticFeedbackEnabled="true"
                android:layout_weight=".5" />

            <com.mats.niru.MyImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/blueoff"
                android:id="@+id/myImageButton4"
                android:scaleType="centerInside"
                android:background="@android:color/black"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:hapticFeedbackEnabled="true"
                android:layout_weight=".5" />

        </LinearLayout>




    </LinearLayout>

</FrameLayout>